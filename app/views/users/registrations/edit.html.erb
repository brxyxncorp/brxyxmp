<div class="container">
	<div class="col-6 center">
		<h2>Edit <%= resource_name.to_s.humanize %></h2>
	</div>
	<div class="col-6 row center">
			<div class="col-12 center">
				<%= image_tag @user.avatar.url(:medium), class: 'img-circle' %>
			</div>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
		<%= devise_error_messages! %>

			<div class="col-12 center">
				<%= f.label :avatar, 'Imagen de perfil' %> <br>
				<%= f.file_field :avatar, :multiple => false %> <br>
			</div>
			<div class="col-12 center">
				<%= f.label :fullname, 'Nombre completo' %><br />
				<%= f.text_field :fullname, autofocus: true, :class => "input-text" %> <br>
			</div>
			<div class="col-12 center">
				<%= f.label :username, 'Usuario' %><br />
				<%= f.text_field :username, autofocus: true, :class => "input-text" %> <br>
			</div>
			<div class="col-12 center">
				<%= f.label :email, 'Correo ElectrÃ³nico' %><br />
				<%= f.email_field :email, autofocus: true, :class => "input-text" %> <br>
			</div>

			<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
				<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div> <br>
			<% end %>

			<div class="col-6 center">
				<hr>
				<%= f.submit "Actualizar", :class => 'btn btn-primary' %>
				<hr>
			</div>
		<% end %>

	</div>

	<div class="col-6 row center">
		<div class="col-12 center">
			<h3>Eliminar cuenta</h3>
			<p><%= button_to "Eliminar", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-error' %></p>
		</div>

		<div class="col-12 center">
			<%= link_to "Regresar", :back %>
		</div>
	</div>
</div>
