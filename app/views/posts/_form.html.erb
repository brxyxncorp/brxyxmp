<br>
<%= form_for post do |f| %>
	<div class="form-group">
		<%= f.label :title, 'Titulo', class: '' %><br>
		<%= f.text_field :title, class: 'input-text' %>
	</div>

	<div class="form-group">
		<%= f.label :body, 'Contenido', class: '' %><br>
		<%= f.text_area :body, class: '', rows: 6 %>
	</div>
	
	<br><br>
	<%= f.submit 'Guardar', class: 'btn btn-primary' %>
<% end %>